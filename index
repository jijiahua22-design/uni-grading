    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const addCourseBtn = document.getElementById('add-course');
            const courseList = document.getElementById('course-list');
            const projectedGpa = document.getElementById('projected-gpa');
            
            let courses = [];
            let totalCredits = 0;
            let totalGradePoints = 0;
            
            addCourseBtn.addEventListener('click', function() {
                const courseName = document.getElementById('course-name').value;
                const credits = parseInt(document.getElementById('credits').value);
                const grade = parseFloat(document.getElementById('grade').value);
                
                if (!courseName) {
                    alert('Please enter a course name');
                    return;
                }
                
                // Add course to the list
                courses.push({ name: courseName, credits: credits, grade: grade });
                
                // Update totals
                totalCredits += credits;
                totalGradePoints += credits * grade;
                
                // Calculate GPA
                const gpa = totalGradePoints / totalCredits;
                
                // Update display
                updateCourseList();
                projectedGpa.textContent = gpa.toFixed(2);
                
                // Clear form
                document.getElementById('course-name').value = '';
            });
            
            function updateCourseList() {
                courseList.innerHTML = '';
                
                courses.forEach((course, index) => {
                    const row = document.createElement('tr');
                    
                    const gradeClass = getGradeClass(course.grade);
                    
                    row.innerHTML = `
                        <td>${course.name}</td>
                        <td>${course.credits}</td>
                        <td class="${gradeClass}">${getGradeLetter(course.grade)}</td>
                        <td>${(course.credits * course.grade).toFixed(1)}</td>
                        <td><button class="btn-danger" data-index="${index}">Remove</button></td>
                    `;
                    
                    courseList.appendChild(row);
                });
                
                // Add event listeners to remove buttons
                document.querySelectorAll('.btn-danger').forEach(button => {
                    button.addEventListener('click', function() {
                        const index = parseInt(this.getAttribute('data-index'));
                        removeCourse(index);
                    });
                });
            }
            
            function removeCourse(index) {
                // Subtract from totals
                totalCredits -= courses[index].credits;
                totalGradePoints -= courses[index].credits * courses[index].grade;
                
                // Remove course
                courses.splice(index, 1);
                
                // Recalculate GPA
                const gpa = totalCredits > 0 ? totalGradePoints / totalCredits : 0;
                
                // Update display
                updateCourseList();
                projectedGpa.textContent = gpa.toFixed(2);
            }
            
            function getGradeClass(gradeValue) {
                if (gradeValue >= 3.7) return 'grade-A';
                if (gradeValue >= 3.3) return 'grade-B';
                if (gradeValue >= 2.7) return 'grade-C';
                if (gradeValue >= 2.0) return 'grade-D';
                return 'grade-F';
            }
            
            function getGradeLetter(gradeValue) {
                if (gradeValue >= 4.0) return 'A';
                if (gradeValue >= 3.7) return 'A-';
                if (gradeValue >= 3.3) return 'B+';
                if (gradeValue >= 3.0) return 'B';
                if (gradeValue >= 2.7) return 'B-';
                if (gradeValue >= 2.3) return 'C+';
                if (gradeValue >= 2.0) return 'C';
                return 'F';
            }
        });
    </script>
